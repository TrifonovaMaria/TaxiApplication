@model DataModels.OrderDriver

@*@{
    ViewBag.Title = "CancelOrder";
}*@

<h2>Отказаться от заказа</h2>

<h3>Вы уверены, что хотите отказаться от заказа?</h3>
<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Order.DepartureAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.DestinationAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Order.Price)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Отменить заказ" class="btn btn-default" /> |
            @Html.ActionLink("К списку заказов", "AllOrders", new { driverId = Model.Driver.ID })
        </div>
    }
</div>

